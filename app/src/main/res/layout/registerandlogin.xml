<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Yaojinpet"
    android:orientation="vertical"
    android:background="@drawable/sign_in_background">

    <LinearLayout
        android:layout_marginTop="60dp"
        android:background="@drawable/loginbroad"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <EditText
        android:layout_marginTop="170dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        android:paddingStart="50sp"
        android:paddingEnd="10sp"
        android:background="@drawable/account"
        android:hint="@string/telephoneNum"
        android:inputType="phone"
        android:labelFor="@+id/phoneNumber"
        android:id="@+id/phoneNumber"
        android:layout_height="40sp"
        android:layout_width="268sp"
        />
    <EditText
        android:paddingStart="50sp"
        android:paddingEnd="10sp"
        android:hint="验证码"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/password"
        android:labelFor="@+id/registerCode"
        android:id="@+id/registerCode"
        android:layout_height="40sp"
        android:layout_width="268sp"
        android:inputType="text"
        android:layout_marginBottom="5dp"
        />


    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="278sp"
        android:layout_height="50sp">
        <Button
            android:visibility="gone"
            android:id="@+id/login"
            android:layout_width="278sp"
            android:layout_height="50sp"
            android:background="@drawable/sign_in"
            />
        <Button
            android:id="@+id/getRegisterCode"
            android:layout_width="278sp"
            android:layout_height="50sp"
            android:background="@drawable/red"
            android:text="@string/registercode"
            />
    </FrameLayout>
</LinearLayout>

</LinearLayout>
